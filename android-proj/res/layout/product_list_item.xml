<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="5dp" >
    
	<ImageView
		android:id="@+id/im_prod_img"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@drawable/ic_launcher"
		android:contentDescription="@string/prod_img_description"
		android:layout_gravity="center_vertical" />
   
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp" >
      
        <TextView
	        android:id="@+id/tv_prod_nome"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/app_name"
	        android:textIsSelectable="true"
	        android:singleLine="true"
	        android:textSize="@dimen/prod_item_name_txt_size" />
	
	    <TextView
	        android:id="@+id/tv_prod_marca"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/app_name"
	        android:textIsSelectable="true"
	        android:layout_centerVertical="true" />
	
	    <TextView
	        android:id="@+id/tv_prod_preco"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/app_name"
	        android:textIsSelectable="true"
	        android:layout_alignParentBottom="true"
	        android:layout_alignParentRight="true" />
        
	    <TextView
	        android:id="@+id/tv_prod_peso"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/app_name"
	        android:textIsSelectable="true"
	        android:layout_alignParentBottom="true"
	        android:layout_marginRight="5dp" />
	    
    </RelativeLayout>

</LinearLayout>